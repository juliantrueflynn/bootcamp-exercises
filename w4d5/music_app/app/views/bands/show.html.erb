<h1><%= @band.name %></h1>

<p>This is <%= @band.name %>'s page.</p>

<% unless @band.albums.empty? %>
  <h2>Albums</h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Live Album</th>
      </tr>
    </thead>
    <tbody>
      <% @band.albums.each do |album| %>
        <tr>
          <td><%= link_to album.title, album_url(album) %></td>
          <td><%= album.year %></td>
          <td><%= album.live_album %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>