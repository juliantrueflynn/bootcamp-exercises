<header class="masthead">
  <div class="masthead-inner wrapper-padding">
    <div class="logo">
      <span class="logo-text">Music App!</span>
    </div>
    <div class="nav nav-user">
      <% if logged_in? %>
        <span class="current_user_email">
          <i class="fa fa-user-circle"></i>
          <%= current_user.email %>
        </span>
        <%= link_to 'Logout', session_url, method: :delete, class: 'btn btn-logout' %>
      <% else %>
        <%= link_to 'Sign in', new_session_url, class: 'btn btn-sign-in' %>
        <%= link_to 'Sign up', new_user_url, class: 'btn btn-sign-up' %>
      <% end %>
    </div>
  </div>
</header>